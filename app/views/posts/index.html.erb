<% @all_posts.each do |p| %>
<div class="container">
	<div class="container">
		<div class="row">
			<div class="allposts col-md-6 col-md-offset-3">
			
			<h2 class="title"><%= link_to p.title, p %></h2>
			<h2 class="time"><%= p.created_at.strftime("%B %d, %Y") %></h2>

			</div>
			

		</div>
	</div>

</div>
<% end %>
<style type="text/css">
	
	.allposts{
		background-color: #ccc;
	}

</style>